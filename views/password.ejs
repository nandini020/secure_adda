            function generate(){
                var block=document.getElementById("myInput");
                var len=document.getElementById("myRange").value;
                block.value=ranPass(len);
                
                
            }
            
            function ranPass(len){
                var text = "";
                var possible = "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789!@#$%^&*()_-?=~";
              
                for (var i = 0; i < len; i++)
                  text += possible.charAt(Math.floor(Math.random() * possible.length));
              
                return text;
